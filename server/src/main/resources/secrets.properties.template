# Template for secrets.properties
# Copy this file to secrets.properties and fill in your actual values
# DO NOT commit secrets.properties to version control

# Application URLs
app.base-url=SERVER_URL
app.frontend-url=FRONTEND_URL

# Google OAuth Configuration
# Get these values from Google Cloud Console -> APIs & Services -> Credentials
spring.security.oauth2.client.registration.google.client-id=YOUR_GOOGLE_CLIENT_ID
spring.security.oauth2.client.registration.google.client-secret=YOUR_GOOGLE_CLIENT_SECRET
spring.security.oauth2.client.registration.google.redirect-uri=${app.base-url}/login/oauth2/code/google
spring.security.oauth2.client.registration.google.authorization-grant-type=authorization_code

# LinkedIn OAuth Configuration
# Get these values from LinkedIn Developer Console -> Apps -> Your App -> Auth
spring.security.oauth2.client.registration.linkedin.client-id=YOUR_LINKEDIN_CLIENT_ID
spring.security.oauth2.client.registration.linkedin.client-secret=YOUR_LINKEDIN_CLIENT_SECRET
spring.security.oauth2.client.registration.linkedin.redirect-uri=${app.base-url}/login/oauth2/code/linkedin
spring.security.oauth2.client.registration.linkedin.authorization-grant-type=authorization_code
spring.security.oauth2.client.registration.linkedin.client-authentication-method=client_secret_post

# Facebook OAuth Configuration
# Get these values from Facebook Developer Console -> Apps -> Your App -> Settings -> Basic
spring.security.oauth2.client.registration.facebook.client-id=YOUR_FACEBOOK_CLIENT_ID
spring.security.oauth2.client.registration.facebook.client-secret=YOUR_FACEBOOK_CLIENT_SECRET
spring.security.oauth2.client.registration.facebook.authorization-grant-type=authorization_code
spring.security.oauth2.client.registration.facebook.redirect-uri=${app.base-url}/login/oauth2/code/facebook
# Facebook accepts client_secret_post; basic also works in many cases
spring.security.oauth2.client.registration.facebook.client-authentication-method=client_secret_post

# JWT Configuration
# Generate a secure random string for JWT signing
# You can use: openssl rand -base64 32
app.security.jwt.secret=YOUR_JWT_SECRET_KEY

# Recall AI Configuration
# Get your API key from Recall AI platform
app.recall.api-key=YOUR_RECALL_API_KEY

# OpenAI Configuration
# Get your API key from OpenAI platform (https://platform.openai.com/api-keys)
app.openai.api-key=YOUR_OPENAI_API_KEY
